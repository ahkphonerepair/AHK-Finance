<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Device Owner Status -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Device Owner Status"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <Spinner
                android:id="@+id/statusSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Organization Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Organization Name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/organizationEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Enrollment Method -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Enrollment Method"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/enrollmentMethodEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Security Restrictions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Restrictions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/restrictionsChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="4dp" />

        <!-- Kiosk Mode -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Kiosk Mode"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <Spinner
                android:id="@+id/kioskModeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Zero Touch Status -->
        <TextView
            android:id="@+id/zeroTouchStatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zero Touch Status: Not Configured"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnApplyRestrictions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Security Restrictions"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btnConfigureKiosk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure Kiosk Mode"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btnInitiateZeroTouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initiate Zero Touch Enrollment"
                android:layout_marginBottom="8dp"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btnWipeDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wipe Device"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_danger"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Close"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>