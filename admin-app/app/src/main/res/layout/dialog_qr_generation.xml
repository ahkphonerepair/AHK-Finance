<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- APK Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APK Source"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/apkSourceGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download URL"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select APK File" />

    </RadioGroup>

    <!-- Download URL -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/downloadUrlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Download URL"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/downloadUrlEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- File Selection -->
    <LinearLayout
        android:id="@+id/fileSelectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/selectedFileText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No file selected"
            android:padding="12dp"
            android:background="@drawable/rounded_border"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnSelectFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Browse"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    </LinearLayout>

    <!-- Organization Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Organization Name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/organizationEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Signature Checksum -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="APK Signature Checksum (Base64)"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/checksumEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="monospace"
            android:textSize="12sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Advanced Options -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Advanced Options"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/checkAutoGrantPermissions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto-grant all permissions"
        android:checked="true"
        android:layout_marginBottom="4dp" />

    <CheckBox
        android:id="@+id/checkSkipSetupWizard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip setup wizard"
        android:checked="true"
        android:layout_marginBottom="4dp" />

    <CheckBox
        android:id="@+id/checkEnableKioskMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable kiosk mode"
        android:checked="false"
        android:layout_marginBottom="16dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate QR Code"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>