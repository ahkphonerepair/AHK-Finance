<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    style="@style/ModernCard"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:stateListAnimator="@animator/card_lift">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section with Modern Design -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <!-- Modern Device Icon with Gradient -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_background"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📱"
                        android:textSize="24sp"
                        android:layout_gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Device Info with Better Typography -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deviceId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device ID"
                    style="@style/AppTextSubheading"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/deviceModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Device Model"
                    style="@style/AppTextCaption"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="none"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Modern Status Badge -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/statusSuccess">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorOnPrimary"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Financial Info - Editable -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/edittext_background"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Amount"
                    style="@style/AppTextCaption" />

                <EditText
                    android:id="@+id/editDueAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/statusError"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:inputType="numberDecimal"
                    android:hint="Enter amount"
                    android:textColorHint="@color/textColorSecondary"
                    android:padding="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due Date"
                    style="@style/AppTextCaption" />

                <EditText
                    android:id="@+id/editDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025-01-01"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginTop="4dp"
                    android:background="@android:color/transparent"
                    android:inputType="date"
                    android:hint="YYYY-MM-DD"
                    android:textColorHint="@color/textColorSecondary"
                    android:padding="8dp"
                    android:focusable="false"
                    android:clickable="true" />

            </LinearLayout>

        </LinearLayout>

        <!-- Customer Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Information"
                style="@style/AppTextCaption"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        style="@style/AppTextCaption" />

                    <TextView
                        android:id="@+id/customerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Name"
                        style="@style/AppTextBody"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        style="@style/AppTextCaption"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/customerPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Phone"
                        style="@style/AppTextBody"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMEI"
                        style="@style/AppTextCaption" />

                    <TextView
                        android:id="@+id/imei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IMEI"
                        style="@style/AppTextBody"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offline Unlocks"
                        style="@style/AppTextCaption"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/offlineUnlocks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        style="@style/AppTextBody"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Seen"
                        style="@style/AppTextCaption"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/lastSeen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Never"
                        style="@style/AppTextBody"
                        android:layout_marginTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="8dp">

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/lockButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="Lock"
                    android:layout_marginEnd="6dp"
                    android:minWidth="0dp"
                    android:textSize="12sp"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp" />

                <Button
                    android:id="@+id/unlockButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="Unlock"
                    android:layout_marginEnd="6dp"
                    android:minWidth="0dp"
                    android:textSize="12sp"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Edit"
                    android:layout_marginEnd="6dp"
                    android:minWidth="0dp"
                    android:textSize="12sp"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="6dp" />

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:text="Delete"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:minWidth="0dp"
                    android:textSize="14sp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>

            <!-- Second Row - Due Details and Location Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/dueDetailsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Due Details"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/locationButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📍 Location"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginHorizontal="4dp" />

                <!-- <Button
                    android:id="@+id/updatePaymentButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="💳 Update Payment"
                    android:background="@drawable/button_primary"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:layout_marginStart="4dp" /> -->

            </LinearLayout>

            <!-- Third Row - Anti-Uninstall Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Anti-Uninstall Protection:"
                    style="@style/AppTextBody"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="8dp" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/antiUninstallSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="@color/colorOnPrimary"
                    android:trackTint="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>